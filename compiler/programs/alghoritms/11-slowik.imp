DECLARE
    a; b; c; d;
    n; m; reszta; potega; dzielnik;
IN
    a := 9223372036854775807;
    b := 9223372036854775806;
    c := 9223372036854775805;
    d := 9223372036854775804;
    n := a;
    n := n * b;
    n := n * c;
    n := n * d;

    dzielnik := 2;
    m := dzielnik * dzielnik;
    WHILE n >= m DO
        potega := 0;
        reszta := n % dzielnik;
        WHILE reszta = 0 DO
            n := n / dzielnik;
            potega := potega + 1;
            reszta := n % dzielnik;
        ENDWHILE
        IF potega > 0 THEN [ czy znaleziono dzielnik ]
            WRITE dzielnik;
            WRITE potega;
        ELSE
            dzielnik := dzielnik + 1;
            m := dzielnik * dzielnik;
        ENDIF
    ENDWHILE
    IF n != 1 THEN [ ostatni dzielnik ]
        WRITE n;
        WRITE 1;
    ENDIF
END